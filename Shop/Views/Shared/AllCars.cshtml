@model Shop.Pages.Models.Car
<div class="col-lg-4">
            <img class="img-thumbnail" src="@Model.Img" alt="@Model.Name"/>
            <h2>@Model.Name</h2>
            <p>Цена: @Model.Price.ToString("c")</p>
            <p><a class="btn btn-primary" asp-controller="ShopCart" asp-action="addToCart" asp-route-Id="@Model.Id" >Добавить в корзину</a></p>
            </div>