@using Shop.ViewModels
@model CarsListViewModels
@{
    Layout = "_Layout";
}

<!DOCTYPE html>


    <h1>Все автомобили</h1>
    <h2>@Model.currCategory</h2>
    <div class="row mt-5 mb-2">
    @{
        foreach(var car in Model.AllCars)
        {
            <div class="col-lg-4">
            <img class="img-thumbnail" src="@car.Img" alt="@car.Name"/>
            <h2>@car.Name</h2>
            <p>Цена: @car.Price.ToString("c")</p>
            <p><a class="btn btn-primary" href="#">Посмотреть</a></p>
            </div>
        }
    }
    </div>